<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Digital Arts Network</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/Content/lib/bootstrap/css/bootstrap.css" />
        <style>
            body
            {
                padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
            }
        </style>
        <link rel="stylesheet" href="~/Content/lib/bootstrap/css/bootstrap-responsive.css" />

        @*@Styles.Render("~/Content/css")*@
        @*@Scripts.Render("~/bundles/modernizr")*@
        
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="brand" href="#">Le Secret Venue</a>
              <div class="nav-collapse collapse">
                <ul class="nav">
                  <li class="active"><a href="#">Home</a></li>
                  <li><a href="#about">Info</a></li>
                  <li><a href="#contact">Help</a></li>
                </ul>
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>

        <div class="container">
            @RenderBody()
        </div>

        <script id="data_temp" type="text/html">
            <tr>
                <td>{{ venue.name }}</td>
                <td>{{ venue.location.address }} {{ venue.location.city }}, {{venue.location.state }} {{ venue.location.postalCode }}</td>
                <td>{{ venue.rating }}</td>
                <td>{{ venue.likes.count }}</td>
                <td>{{ venue.stats.checkinsCount }}</td>
            </tr>
        </script>

@*        <script id="data_temp_old" type="text/html">
            <tr>
                <td>{{ name }}</td>
                <td>{{ address }}</td>
                <td>{{ rating }}</td>
                <td>{{ num_of_reviews }}</td>
                <td>{{ num_of_checkins }}</td>
            </tr>
        </script>*@

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="~/Content/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/Content/lib/icanhaz/icanhaz.js"></script>
        <script src="~/Content/js/app.js"></script>

        @*@Scripts.Render("~/bundles/jquery")*@
        @RenderSection("scripts", required: false)
    </body>
</html>
